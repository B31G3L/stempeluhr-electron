{
  "name": "tyme",
  "version": "1.0.0",
  "description": "Moderne Zeiterfassung mit Tray-Icon für Mac und Windows",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:mac-arm": "electron-builder --mac --arm64",
    "build:mac-intel": "electron-builder --mac --x64",
    "build:mac-universal": "electron-builder --mac --universal",
    "build:win": "electron-builder --win --x64",
    "build:win32": "electron-builder --win --ia32",
    "build:all": "electron-builder --mac --win"
  },
  "keywords": ["zeiterfassung", "timetracker", "tyme", "productivity"],
  "author": "Dein Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.tyme.app",
    "productName": "Tyme",
    "copyright": "Copyright © 2025 ${author}",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "zip",
          "arch": ["x64", "arm64"]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 400
      }
    },
    "win": {
      "icon": "icon.png",
      "target": ["nsis", "portable"]
    },
    "files": [
      "main.js",
      "index.html",
      "icon.png",
      "tray.png",
      "package.json"
    ],
    "directories": {
      "output": "dist",
      "buildResources": "build"
    }
  }
}