{
  "name": "tyme",
  "version": "1.0.0",
  "description": "Moderne Zeiterfassung mit Tray-Icon für Mac und Windows",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win --x64",
    "build:all": "electron-builder --mac --win"
  },
  "keywords": ["zeiterfassung", "timetracker", "tyme", "productivity"],
  "author": "Dein Name",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/deinname/tyme.git"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.tyme.app",
    "productName": "Tyme",
    "copyright": "Copyright © 2025",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icon.png",
      "target": ["dmg", "zip"],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist"
    },
    "win": {
      "icon": "icon.png",
      "target": ["nsis", "portable"]
    },
    "files": [
      "main.js",
      "index.html",
      "icon.png",
      "tray.png",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    }
  }
}