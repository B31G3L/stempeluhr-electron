{
  "name": "stempeluhr",
  "version": "1.0.0",
  "description": "Zeiterfassungs-Tool mit Tray-Icon f√ºr Mac und Windows",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --mac --win"
  },
  "keywords": ["zeiterfassung", "stempeluhr", "timetracker"],
  "author": "Dein Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.stempeluhr.app",
    "productName": "Stempeluhr",
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "icon.png",
      "target": ["dmg", "zip"]
    },
    "win": {
      "icon": "icon.png",
      "target": ["nsis", "portable"]
    },
    "files": [
      "main.js",
      "index.html",
      "icon.png"
    ]
  }
}